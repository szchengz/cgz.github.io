<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="spring.task" />

    <bean id="firstJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="firstJob" />
        <property name="targetMethod" value="execTask" />
        <property name="concurrent" value="true" />
    </bean>


    <bean id="cronTrigger"  class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="firstJobDetail" />
        <property name="cronExpression" value="*/5 * * * * ?" />
        <!--<property name="cronExpression" value="59 * * * * ?" />-->
    </bean>

    <!--<bean name="complexJobDetail"  class="org.springframework.scheduling.quartz.JobDetailFactoryBean">-->
